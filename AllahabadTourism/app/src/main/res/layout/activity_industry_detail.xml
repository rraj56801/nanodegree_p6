<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.allahabadtourism.activities.IndustryDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_list_industry"
            android:layout_width="match_parent"
            android:layout_height="@dimen/industry_details_image_height"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/text_title_industry"
            style="@style/DetailTextTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="industryName" />

        <TextView
            style="@style/DetailTextHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/description" />

        <TextView
            android:id="@+id/long_textView_industry"
            style="@style/DetailTextContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LongDescription" />
        <Button
            android:id="@+id/button_maps_industry"
            style="@style/MapsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/maps" />
    </LinearLayout>

</RelativeLayout>
